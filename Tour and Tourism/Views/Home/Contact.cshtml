@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/GeneralMaster.cshtml";
}

<div class="container contact" style="margin-top:120px;margin-bottom:180px">
    <div class="row">
        <div class="col-md-3" id="c1">
            <div class="contact-info" style="color:white;">
                <i class="fa fa-envelope" style="font-size:5rem;" /></i>
                <h1 style="font-family:'Rancho', cursive">Contact  Us</h1>
                <h4>We would love to hear from you !</h4>
            </div>
        </div>

        <div class="col-md-9">
            <form method="post" action="/home/Contact">
                <div class="contact-form">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="fname">Name:</label>
                        <div class="col-sm-10">
                            <input type="text" name="Name" required class="form-control" id="fname" placeholder="Enter Your Name" name="fname">
                        </div><br /><br />
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Email:</label>
                        <div class="col-sm-10">
                            <input type="email" required class="form-control" id="email" placeholder="Enter email" name="email">
                        </div>
                        <br /><br />
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="comment">Comment:</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" required name="Msg" rows="5" id="comment"></textarea>
                        </div>
                    </div>


                    <div class="form-group" style="padding-top:150px">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default hvr-pop">Submit</button>
                        </div>
            </form>
        </div>
    </div>
</div>
	</div>
</div>

