@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <link href="~/Content/Login-Signup%20Page/style.css" rel="stylesheet" />
    <link href="~/Content/Login-Signup%20Page/hover-min.css" rel="stylesheet" />
    <title>Sign in & Sign up Form</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form action="/home/login" method="post" class="sign-in-form">


                    <!-- Login Form Coding Main-->
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" name="email" class="form-control" placeholder="Email" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" name="password" class="form-control" placeholder="Password" required />
                    </div>
                    <input type="submit" value="Login" class="btn solid hvr-float" />

                    <!--Form Coding Main End-->


                    <p class="social-text">Or Sign in with social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f hvr-pop"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter hvr-pop"></i>
                        </a>
                        <a href="/home/index" class="social-icon">
                            <i class="fa fa-home hvr-pop"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google hvr-pop"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-instagram hvr-pop"></i>
                        </a>
                    </div>
                </form>


                <!--Sign Up Form Coding-->
                <form action="#" class="sign-up-form">
                    <h2 class="title">Sign up</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="Username" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" placeholder="Email" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Password" required />
                    </div>
                    <input type="submit" class="btn hvr-float" value="Sign up" />

                    <!--Sign Up Form Coding End-->


                    <p class="social-text">Or Sign up with social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f hvr-pop"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter hvr-pop"></i>
                        </a>
                        <a href="/home/index" class="social-icon">
                            <i class="fa fa-home hvr-pop"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google hvr-pop"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-instagram hvr-pop"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        Join Us And Easily Create Account Here By Filling This Form.
                    </p>
                    <button class="btn transparent hvr-pop" id="sign-up-btn">
                        Sign up
                    </button>
                </div>
                <img src="~/Content/Login-Signup Page/img/log.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        If You Are a User Of Our Site Then You Can Easily Login From Here.
                    </p>
                    <button class="btn transparent hvr-pop" id="sign-in-btn">
                        Sign in
                    </button>
                </div>
                <img src="~/Content/Login-Signup Page/img/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>
    <script src="~/Content/Login-Signup%20Page/login.js"></script>

</body>
</html>

